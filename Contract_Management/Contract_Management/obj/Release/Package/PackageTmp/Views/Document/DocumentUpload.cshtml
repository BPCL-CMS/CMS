        var SELECTED_DOCS = $("#SELECTED_DOCS").val();
        SELECTED_DOCS = SELECTED_DOCS + "," + $("#DOC_TYPE").val();
        $("#SELECTED_DOCS").val(SELECTED_DOCS);

        $("#DOC_TYPE").select2("val", "");
        //  BindDOC_TYPE_Select2();
        $("#uploadedFile").val("");
