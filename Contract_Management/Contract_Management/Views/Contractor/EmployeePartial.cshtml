@model Contract_Management.Data.DomainModels.EmployeesViewModel
@{
    if (Model != null)
    {
       
                       
                            <input type="hidden" id="USER_TYPE" name="USER_TYPE" value="EMPLOYEE" />                           
                            <fieldset disabled>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Employee Name</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Employee Name" name="EMP_NAME" id="EMP_NAME" value="@Model.EMP_NAME" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Gender</label>
                                    <div class="col-sm-8">
                                        @{
                                            if (Model.GENDER == "Male")
                                            {

                                                <label class="radio-inline">
                                                    <input type="radio" name="GENDER" id="IsARC1" value="Male" checked> Male
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="GENDER" id="IsARC2" value="Female"> Female
                                                </label>
                                            }
                                            else
                                            {
                                                <label class="radio-inline">
                                                    <input type="radio" name="GENDER" id="IsARC1" value="Male"> Male
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="GENDER" id="IsARC2" value="Female" checked> Female
                                                </label>
                                            }
                                        }

                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Marital Status</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="select2 " placeholder="Marital Status" name="MARITAL_STATUS" id="MARITAL_STATUS" style="width:100%" value="@Model.MARITAL_STATUS">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">e-Pehchan Card</label>
                                    <div class="col-sm-8">
                                        @{
                                            if (Model.PEHCHAN == true)
                                            {
                                                <label class="radio-inline">
                                                    <input type="radio" name="PEHCHAN" value="true" checked> Yes
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="PEHCHAN" value="false"> No
                                                </label>
                                            }
                                            else
                                            {
                                                <label class="radio-inline">
                                                    <input type="radio" name="PEHCHAN" value="true"> Yes
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="PEHCHAN" value="false" checked> No
                                                </label>
                                            }
                                        }

                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">PF Number</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="PF Number" name="PF_NO" value="@Model.EMP_PF_NO">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">PF Registration Date</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="PF Registration Date" name="PF_REGN_DATE" id="PF_REGN_DATE" value="@Model.PF_REGN_DATE">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">EPS</label>
                                    <div class="col-sm-8">
                                        <label class="radio-inline">
                                            <input type="radio" name="EPS" value="True"> Yes
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="EPS" value="False" checked> No
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Evictee</label>
                                    <div class="col-sm-8">
                                        <label class="radio-inline">
                                            <input type="radio" name="EVICTEE" value="True"> Yes
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="EVICTEE" value="False" checked> No
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Evictee Card No</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Evictee Card No" name="EVICTEE_CARD_NO" value="@Model.EVICTEE_CARD_NO">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Is Migrant Worker</label>
                                    <div class="col-sm-8">
                                        <label class="radio-inline">
                                            <input type="radio" name="ISMW" value="True"> Yes
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" name="ISMW" value="False" checked> No
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Type of Disability</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Type of Disability" name="DISABILITY_TYPE" value="@Model.DISABILITY_TYPE ">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Relationship</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="select2" placeholder="Relationship" name="RELATION_IP" id="RELATION_IP" style="width:100%" value="@Model.RELATION_IP">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Relation Name</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Relation Name" name="RELATION_NAME" value="@Model.RELATION_NAME">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Date of Birth</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Date of Birth" name="DOB" id="DOB" value="@Model.DOB.ToString()">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Date of Joining</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Date of Joining" name="DOJ" id="DOJ" value="@Model.DOJ">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Present Address</label>
                                    <div class="col-sm-8">
                                        <textarea class="form-control" rows="3" name="PRESENT_ADRS" id="PRESENT_ADRS">@Model.PRESENT_ADRS</textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Permanent Address</label>
                                    <label class="radio-inline">
                                        <input type="checkbox" name="SameAsPermanent" id="SameAsPermanent" onchange="CopyAddress()"> Same As Permanent Address
                                    </label>
                                    <div class="col-sm-8">
                                        <textarea class="form-control" rows="3" name="PERMANENT_ADRS" id="PERMANENT_ADRS">@Model.PERMANENT_ADRS</textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">City</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="City" name="CITY" value="@Model.CITY">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">District</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="District" name="District">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">State</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="State" name="STATE" value="@Model.STATE">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Pin Code</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Pin Code" name="PINCODE" value="@Model.PINCODE">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">ICE Phone</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="ICE Phone" name="ICE_PHONE" value="@Model.ICE_PHONE">
                                    </div>
                                </div>




                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Employee Type</label>
                                    <div class="col-sm-8">
                                        <input type="text" placeholder="Employee Type" class="select2" name="EMP_TYPE" id="EMP_TYPE" style="width:100%" value="@Model.EMP_TYPE">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">ID Type</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="ID Type" name="ID_TYPE" value="@Model.ID_TYPE">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">ID Number</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="ID Number" name="ID_NUM" value="@Model.ID_NUM">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Photo</label>
                                    <div class="col-sm-8">
                                        <div class="form-group">
                                            <input type="file" id="file" name="file" onchange="show(this)">
                                        </div>
                                        <div>
                                            <img id="user_img"
                                                 height="100"
                                                 width="90"
                                                 style="border:solid" src="" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">ESI Exemption</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="ESIExemption" name="ESIExemption" class="select2 " style="width:100%" value="@Model.ESI_EXEMPTION" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">WC Policy No</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="WC Policy No" name="WCPolicy" id="WCPolicy" disabled value="@Model.WC_POLICY">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Policy Valid UpTo</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Policy Valid UpTo" name="WC_POLICY_VALID_UPTO" id="WC_POLICY_VALID_UPTO" disabled value="@Model.WC_POLICY_VALID_UPTO.Value.ToShortDateString()">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">ESI Number</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="ESI Number" name="EMP_ESINO" id="EMP_ESINO" disabled value="@Model.EMP_ESINO">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">ESI Registration Date</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="ESI Registration Date" name="ESI_REGN_DATE" id="ESI_REGN_DATE" disabled value="@Model.ESI_REGN_DATE.Value.ToShortDateString()">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Employer ESI Code</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Employer ESI Code" name="EMPR_ESI_CODE" id="EMPR_ESI_CODE" disabled value="@Model.EMPR_ESI_CODE">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">PF Exemption</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="PFExemption" name="PF_EXEMPTION" class="select2 " style="width:100%" value="@Model.PF_EXEMPTION" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">UAN Number</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="PF UAN Number" name="UAN" id="UAN" disabled value="@Model.UAN">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">PF Number</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="PF UAN Number" name="EMP_PF_NO" id="EMP_PF_NO" disabled value="@Model.EMP_PF_NO">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Employer PF Code</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Employer PF Code" name="EMPR_PF_CODE" id="EMPR_PF_CODE" disabled value="@Model.EMPR_PF_CODE">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Name of Bank</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Name of Bank" name="BANK_NAME" value="@Model.BANK_NAME">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Name of Branch</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Name of Branch" name="BANK_BRANCH" value="@Model.BANK_BRANCH">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Address of Bank (IFSC)</label>
                                    <div class="col-sm-8">
                                        <textarea class="form-control" rows="3" name="BANK_ADDRESS">@Model.BANK_ADDRESS</textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">SB Account Number</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="SB Account Number" name="BANK_ACNO" value="@Model.BANK_ACNO">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Blacklisted</label>
                                    <div class="col-sm-8">
                                        @{
                                            if (Model.BLACK_LISTED == true)
                                            {
                                                <label class="radio-inline">
                                                    <input type="radio" name="BLACK_LISTED" value="True" checked> Yes
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="BLACK_LISTED" value="False"> No
                                                </label>
                                            }
                                            else
                                            {
                                                <label class="radio-inline">
                                                    <input type="radio" name="BLACK_LISTED" value="True"> Yes
                                                </label>
                                                <label class="radio-inline">
                                                    <input type="radio" name="BLACK_LISTED" value="False" checked> No
                                                </label>
                                            }

                                        }

                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Reson For Blacklisting</label>
                                    <div class="col-sm-8">
                                        <textarea class="form-control" rows="3" name="BLACK_LISTED_REASON">@Model.BLACK_LISTED_REASON</textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Blacklisted Date</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" placeholder="Blacklisted Date" name="BLACK_LISTED_DATE" id="BLACK_LISTED_DATE" value="@Model.BLACK_LISTED_DATE">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="label-name" class="col-sm-4 col-form-label">Remarks</label>
                                    <div class="col-sm-8">
                                        <textarea class="form-control" rows="3" name="REMARKS">@Model.REMARKS</textarea>
                                    </div>
                                </div>

                            </fieldset>
                         



                       

                        @*@{ Html.RenderPartial("../Document/DocumentUpload");}*@
                   
            
    }
}


